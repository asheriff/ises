!!! 5

%html{:xmlns=>"http://www.w3.org/1999/xhtml"}
  %head
    %title #{page_title}
    %meta{ :content=>"text/javascript", "http-equiv"=>"Content-Script-Type" }
    %meta{ :content=>"text/css", "http-equiv"=>"Content-Style-Type" }
    %meta{ :content=>"text/html; charset=utf-8", "http-equiv"=>"Content-Type" }
    %meta{ :content=>"0", "http-equiv"=>"expires" }
    %meta{ :content=>"Description for search engines", :name=>"description" }
    %meta{ :content=>"Ramaze #{Ramaze::VERSION}", :name=>"generator" }
    %meta{ :content=>"Ramaze, Your own keywords", :name=>"keywords" }
    %meta{ :content=>"#{Time.now.iso8601}", :name=>"date" }
    
    /[if lt IE 9]
      %script{ :type=>"text/javascript", :src=>"/js/html5.js" }
    
    %script{ :type=>"text/javascript", :src=>"/js/jquery.js" }
    %script{ :type=>"text/javascript", :src=>"/js/plugins/jquery.metadata.js" }
    
    %link{ :rel=>:stylesheet, :type=>"text/css", :href=>"/css/main.css" }

  %body{ :class=>[page_class, :no_js] }
    :javascript
      jQuery("BODY").removeClass("no_js").addClass("js");
    
    %header.Header.clearfix#Header
      .wrapper
        %a.Logo{ :href=>"/" }
          %img{ :src=>"/img/logo.gif", :alt=>"International Special Events Society logo" }
        
        %nav.UtilNav#UtilNav
          %ul
            - util_nav.each do |link|
              %li{ :class=>css_position(util_nav, link)} <a href="#{link.href}">#{link.name}</a>
          
        %nav.MainNav#MainNav
          %ul
            - main_nav.each do |link|
              %li{ :class=>(link.selected ? "selected" : nil) }> <a href="#{link.href}">#{link.name}</a>

    - unless sub_nav.empty?
      %nav.SubNav#SubNav
        .wrapper
          %ul
            - sub_nav.each do |link|
              %li{ :class=>(link.selected ? "selected" : nil) }> <a href="#{link.href}">#{link.name}</a>
    
    %section.Content#Content
      .wrapper.clearfix
        .padding
        
          %h1 #{heading}
          
          - unless sidebar.empty?
            = render_partial sidebar
          
          .Article#Article
            = @content
    
    %footer.Footer.clearfix#Footer
      .wrapper
        .ContentOverlap
          &nbsp;
        %section.info_block
          .pad.first
            %h2 Latest News
            %p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod.
            %p Tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.
            %p Tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.
        %section.info_block
          .pad
            %h2 Contact Information
            %p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod.
            %p
              %a{ :href=>:contact } Contact Us
            %p 800.555.1234
        %section.info_block
          .pad.last
            %h2 Get Connnected
            %ul.social_media_links
              %li
                %a{ :href=>"http://facebook.com", :rel=>:todo }
                  %img{ :src=>"/img/icons/media/facebook.gif", :alt=>"Facebook icon" }
              %li
                %a{ :href=>"http://twitter.com", :rel=>:todo }
                  %img{ :src=>"/img/icons/media/twitter.gif", :alt=>"Twitter icon" }
              %li
                %a{ :href=>"http://linkedin.com", :rel=>:todo }
                  %img{ :src=>"/img/icons/media/linkedin.gif", :alt=>"Linkedin icon" }
    
    #ModalContent
      .controls
        %a.close_modal{ :href=>'#' } Close X
      .bd
        .loading
          %img{ :src=>"/img/ajax_loading.gif", :alt=>"Loading..." }
          .text Loading...
    
    %script{ :type=>"text/javascript", :src=>"/js/plugins/jquery.simplemodal.js" }
    %script{ :type=>"text/javascript", :src=>"/js/site.js" }
    
    = render_partial "shared/debug_info"